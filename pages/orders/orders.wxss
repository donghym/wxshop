/* pages/orders/orders.wxss */
@import "/styles/common.wxss";

.orders {
}

.orders>p {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-around;
}

.orders>p span.on {
  border-bottom: salmon 1rpx solid;
}

.orders-list {
}

.orders-list-detail {
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
}

.orders-list-detail {
}

.orders-list-detail-top {
  height: 40rpx;
  line-height: 40rpx;
}

.orders-list-detail-top h3 {
  font-weight: bold;
  float: left;
  margin-right: 10rpx;
}

.orders-list-detail-top .time {
  float: left;
  color: #999;
  font-weight: lighter;
  font-size: 22rpx;
}

.orders-list-detail-top .states {
  float: right;
  color: #999;
  font-size: 24rpx;
}

.orders-list-detail-center {
  margin: 20rpx 0;
}

.orders-list-detail-center image {
  width: 140rpx;
  height: 140rpx;
  border: 1px #eee solid;
  border-radius: 10rpx;
  overflow: hidden;
}

.orders-list-detail-center div {
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.orders-list-detail-center .price {
}

.orders-list-detail-center .num {
  color: #999;
  font-size: 24rpx;
}

.orders-list-detail-bottom {
  display: flex;
  justify-content: flex-end;
}

.orders-list-detail-bottom-btn {
  margin-left: 20rpx;
  border: 1rpx #999 solid;
  border-radius: 8rpx;
  padding: 5rpx 10rpx 8rpx;
  font-size: 22rpx;
}

.orders-list-none {
}
